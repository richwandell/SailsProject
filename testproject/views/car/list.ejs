<ul class="nav nav-tabs">
    <li role="presentation" class="active"><a href="#">Cars</a></li>
    <li role="presentation"><a href="/passenger/list">Passengers</a></li>
    <li role="presentation"><a href="/family/list">Families</a></li>
    <li role="presentation"><a href="/part/list">Car Parts</a></li>
</ul>
<div class="panel panel-default" id="passenger_list">
    <table class="table table-striped table-hover">
    <caption>
        Sails Cars! <br>
        <%- req.flash('message') %>
        <%- req.flash('error') %>
    </caption>
    <thead>
        <tr>
            <th>Car</th>
            <th>Passengers</th>
        </tr>
    </thead>
    <tbody>
<% cars.forEach(function(car){ %>
    <tr>
        <td><%- car.name %></td>
        <td>
            <a href="/passenger/car/<%- car.id %>">
                <button class="btn btn-primary" type="button">
                    Passengers <span class="badge"><%- car.passengers.length %></span>
                </button>
            </a>
        </td>
    </tr>
<% }); %>
    </tbody>
</table>
    </div>

<div class="panel panel-default" id="new_passenger">
    <form class="form-horizontal" action="/car/addCar" method="POST">
        <input type="hidden" name="_csrf" value="<%= _csrf %>" />
        <div class="form-group">
            <label for="car_name" class="col-sm-2 control-label">Car Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="car_name" placeholder="First Name" name="car_name">
            </div>
        </div>
        <input type="submit" class="btn btn-default" value="Add Car"/>
    </form>
</div>
